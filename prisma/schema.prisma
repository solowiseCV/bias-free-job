generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserType{
  job_seeker
  hirer
}

model User {
  id                     String            @id @default(auto()) @map("_id") @db.ObjectId
  email                  String            @unique
  lastname               String
  firstname              String
  password               String?
  avatar                 String?
  authId                 String?
  userType               UserType 
  resetToken             String?
  resetTokenExpires DateTime?
}